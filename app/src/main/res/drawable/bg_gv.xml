<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/line" />

            <gradient android:angle="270.0" android:endColor="#0d3153" android:startColor="#0d3153" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#06122a" android:startColor="#06122a" />

            <stroke android:width="1.0px" android:color="@color/line" />
        </shape></item>
    <item><shape android:shape="rectangle">
        <gradient android:angle="270.0" android:endColor="#1078c1" android:startColor="#1078c1" />
            <stroke android:width="1.0px" android:color="@color/line" />
    </shape></item>

</selector>